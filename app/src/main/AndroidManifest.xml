<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ac.lnmiit.android.appointr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateHidden">
        <activity
            android:name=".Activities.login_home"
            android:theme="@style/AppTheme">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Slogin"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.S_Home"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.HOME" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Appoint"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.APPOINT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Flogin"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.P_Reset"
            android:label="Password Change"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.RESET" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.F_Home"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.HOME" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Reply"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.REPLY" />
            </intent-filter>
        </activity>
    </application>

</manifest>